
package main

import (
	"bytes"
	"fmt"
	"os/exec"
	"testing"
)

func TestDockerExecCommand(t *testing.T) {
	// Create the command
	cmd := exec.Command("docker", "exec", "clab-frrlab-router2", "/bin/bash")

	// Create buffers to store the output
	var stdout bytes.Buffer
	var stderr bytes.Buffer
	cmd.Stdout = &stdout
	cmd.Stderr = &stderr

	// Run the command
	err := cmd.Run()
	if err != nil {
		t.Errorf("Error executing command: %v", err)
		// Print stderr output
		fmt.Println("Error output:")
		fmt.Println(stderr.String())
		return
	}

	// Print stdout output
	fmt.Println("Output of the command:")
	fmt.Println(stdout.String())
}
