
package main

import (
	"bytes"
	"fmt"
	"os/exec"
	"testing"
)

func TestDockerExecCommand(t *testing.T) {
	// Create the command
	cmd := exec.Command("docker", "exec", "clab-frrlab-router2", "/bin/bash")

	// Create a buffer to store the output
	var output bytes.Buffer
	cmd.Stdout = &output

	// Run the command
	err := cmd.Run()
	if err != nil {
		t.Errorf("Error executing command: %v", err)
		return
	}

	// Print the output
	fmt.Println("Output of the command:")
	fmt.Println(output.String())
}
