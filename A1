
package main

import (
    "bytes"
    "fmt"
    "os/exec"
)

func listDockerContainers() (string, error) {
    // Command to list Docker containers
    cmd := exec.Command("sudo", "docker", "ps")

    // Execute the command
    var output bytes.Buffer
    cmd.Stdout = &output
    cmd.Stderr = &output
    err := cmd.Run()
    if err != nil {
        return "", fmt.Errorf("error executing command: %s", err)
    }

    return output.String(), nil
}

func main() {
    output, err := listDockerContainers()
    if err != nil {
        fmt.Println("Error:", err)
        return
    }

    // Print the output
    fmt.Println(output)
}
